#!/usr/bin/env ruby
# -*- mode: ruby -*-
require 'rubygems'

if !File.exist?('Gemfile')
  ENV["BUNDLE_GEMFILE"] ||= File.expand_path("../../Gemfile", __FILE__)
end

require 'bundler/setup'
Bundler.require(:default, :production)

if Amiba::Util.in_amiba_application?
  Bundler.require(:production_extended)
end

$thor_runner = true
Thor::Runner.start
