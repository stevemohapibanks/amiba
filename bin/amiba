#!/usr/bin/env ruby
# -*- mode: ruby -*-
require 'rubygems'

if File.exist?('Gemfile')
  require 'bundler/setup'
  Bundler.require(:default)
else
  require 'thor'
  require 'thor/runner'
  require 'tilt'
  require 'haml'
  require 'active_support'
  require 'active_model'
  require 'i18n'
  require 'rdiscount'
  require 'grit'
  require 'amiba'
end

$thor_runner = true
Thor::Runner.start
